<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="150pt">

        <net.csdn.roundview.RoundFrameLayout
            android:id="@+id/header_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="68pt"
            android:layout_marginTop="27pt"
            android:background="@color/white"
            app:rRadius="150pt">

            <net.csdn.roundview.CircleImageView
                android:id="@+id/iv_header"
                android:layout_width="300pt"
                android:layout_height="300pt"
                android:scaleType="centerCrop"
                android:src="@mipmap/header_main" />

            <net.csdn.roundview.RoundTextView
                android:id="@+id/rt_message_num"
                android:layout_width="100pt"
                android:layout_height="100pt"
                android:layout_gravity="end"
                android:background="#fd4022"
                android:fontFamily="@font/pretendard_semibold"
                android:gravity="center"
                android:text=""
                android:textColor="@color/white"
                android:textSize="46pt"
                android:visibility="invisible"
                app:rRadius="50pt" />
        </net.csdn.roundview.RoundFrameLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:layout_marginTop="39pt"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:layout_marginEnd="95pt"
                android:gravity="end">

                <FrameLayout
                    android:id="@+id/fl_search"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:id="@+id/iv_search"
                        android:layout_width="90pt"
                        android:layout_height="90pt"
                        android:layout_marginEnd="66pt"
                        android:scaleType="centerCrop"
                        android:src="@mipmap/ic_search_black" />
                </FrameLayout>

                <ImageView
                    android:id="@+id/iv_menu"
                    android:layout_width="80pt"
                    android:layout_height="80pt"
                    android:src="@mipmap/ic_menu"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

            </LinearLayout>


            <FrameLayout
                android:id="@+id/fl_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:layout_marginTop="44pt">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="70pt"
                    android:src="@mipmap/ic_main_logo" />
            </FrameLayout>
        </LinearLayout>
    </FrameLayout>
</LinearLayout>