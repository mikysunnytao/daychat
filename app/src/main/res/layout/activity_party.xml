<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawer"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:openDrawer="end">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <FrameLayout
            android:id="@+id/fl_chat"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="1000pt"
        android:layout_height="match_parent"
        android:layout_gravity="end"
        android:background="@color/white"
        android:orientation="vertical">

        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">


                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginStart="15dp"
                    android:layout_marginTop="80dp"
                    android:fontFamily="@font/pretendard_semibold"
                    android:gravity="center_vertical"
                    android:text="HOME"
                    android:textColor="@color/black" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1pt"
                    android:layout_marginStart="@dimen/dp_15"
                    android:background="#e1e1e1" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/dp_15"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:fontFamily="@font/pretendard_semibold"
                        android:gravity="center_vertical"
                        android:text="CHAT"
                        android:textColor="@color/black" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1pt"
                        android:background="#e1e1e1" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:layout_marginStart="@dimen/dp_15"
                        android:gravity="center_vertical"
                        android:text="MY CHAT" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1pt"
                        android:background="#e1e1e1" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:layout_marginStart="@dimen/dp_15"
                        android:gravity="center_vertical"
                        android:text="FRIENDS(연락처)" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1pt"
                        android:background="#e1e1e1" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:layout_marginStart="@dimen/dp_15"
                        android:gravity="center_vertical"
                        android:text="+ 모임광장" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1pt"
                        android:background="#e1e1e1" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:layout_marginStart="@dimen/dp_30"
                        android:gravity="center_vertical"
                        android:text="-장르별(태그)" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1pt"
                        android:background="#e1e1e1" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:layout_marginStart="@dimen/dp_30"
                        android:gravity="center_vertical"
                        android:text="-추천모임" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1pt"
                        android:background="#e1e1e1" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:layout_marginStart="@dimen/dp_30"
                        android:gravity="center_vertical"
                        android:text="-핫한모임" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/dp_15"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:fontFamily="@font/pretendard_semibold"
                        android:gravity="center_vertical"
                        android:text="FUN"
                        android:textColor="@color/black" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1pt"
                        android:background="#e1e1e1" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:layout_marginStart="@dimen/dp_15"
                        android:gravity="center_vertical"
                        android:text="VIDEO" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1pt"
                        android:background="#e1e1e1" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:layout_marginStart="@dimen/dp_15"
                        android:gravity="center_vertical"
                        android:text="SHORTS" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1pt"
                        android:background="#e1e1e1" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:layout_marginStart="@dimen/dp_15"
                        android:gravity="center_vertical"
                        android:text="PICTURES" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1pt"
                        android:background="#e1e1e1" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:layout_marginStart="@dimen/dp_15"
                        android:gravity="center_vertical"
                        android:text="STORE" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/dp_15"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:fontFamily="@font/pretendard_semibold"
                        android:gravity="center_vertical"
                        android:text="PICKUP"
                        android:textColor="@color/black" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1pt"
                        android:background="#e1e1e1" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:layout_marginStart="@dimen/dp_15"
                        android:gravity="center_vertical"
                        android:text="모임(그룹채팅)" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1pt"
                        android:background="#e1e1e1" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:layout_marginStart="@dimen/dp_15"
                        android:gravity="center_vertical"
                        android:text="쿠폰" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1pt"
                        android:background="#e1e1e1" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:layout_marginStart="@dimen/dp_15"
                        android:gravity="center_vertical"
                        android:text="배달" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1pt"
                        android:background="#e1e1e1" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:layout_marginStart="@dimen/dp_15"
                        android:gravity="center_vertical"
                        android:text="여행" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1pt"
                        android:background="#e1e1e1" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:layout_marginStart="@dimen/dp_15"
                        android:gravity="center_vertical"
                        android:text="운동" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/dp_15"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:fontFamily="@font/pretendard_semibold"
                        android:gravity="center_vertical"
                        android:text="QUICK +"
                        android:textColor="@color/black" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1pt"
                        android:background="#e1e1e1" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:layout_marginStart="@dimen/dp_15"
                        android:gravity="center_vertical"
                        android:text="채팅방마들기" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1pt"
                        android:background="#e1e1e1" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:layout_marginStart="@dimen/dp_15"
                        android:gravity="center_vertical"
                        android:text="친구추가하기" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1pt"
                        android:background="#e1e1e1" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:layout_marginStart="@dimen/dp_15"
                        android:gravity="center_vertical"
                        android:text="비디오/쇼츠올리기" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1pt"
                        android:background="#e1e1e1" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:layout_marginStart="@dimen/dp_15"
                        android:gravity="center_vertical"
                        android:text="사진올리기" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/dp_15"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:fontFamily="@font/pretendard_semibold"
                        android:gravity="center_vertical"
                        android:text="MY PAGE (SETTING)"
                        android:textColor="@color/black" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1pt"
                        android:background="#e1e1e1" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:layout_marginStart="@dimen/dp_15"
                        android:gravity="center_vertical"
                        android:text="MY PAGE" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1pt"
                        android:background="#e1e1e1" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:layout_marginStart="@dimen/dp_15"
                        android:gravity="center_vertical"
                        android:text="WALLET (지갑)" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1pt"
                        android:background="#e1e1e1" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:layout_marginStart="@dimen/dp_15"
                        android:gravity="center_vertical"
                        android:text="MESSEGE(메세지)" />


                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/dp_15"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:fontFamily="@font/pretendard_semibold"
                        android:gravity="center_vertical"
                        android:text="HELP"
                        android:textColor="@color/black" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1pt"
                        android:background="#e1e1e1" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:layout_marginStart="@dimen/dp_15"
                        android:gravity="center_vertical"
                        android:text="Q&amp;A" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1pt"
                        android:background="#e1e1e1" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:layout_marginStart="@dimen/dp_15"
                        android:gravity="center_vertical"
                        android:text="HELP (AI CHAT)" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1pt"
                        android:background="#e1e1e1" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:layout_marginStart="@dimen/dp_15"
                        android:gravity="center_vertical"
                        android:text="CONTACT" />


                </LinearLayout>


                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginStart="15dp"
                    android:fontFamily="@font/pretendard_semibold"
                    android:gravity="center_vertical"
                    android:text="ABOUT"
                    android:textColor="@color/black" />

                <ImageView
                    android:layout_width="600pt"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/dp_15"
                    android:src="@mipmap/ic_main_logo" />
            </LinearLayout>
        </androidx.core.widget.NestedScrollView>
    </LinearLayout>
</androidx.drawerlayout.widget.DrawerLayout>