<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/cl_main"
    android:background="#33000000">


    <net.csdn.roundview.RoundFrameLayout
        android:id="@+id/fl_my"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginStart="@dimen/dp_90"
        android:layout_marginTop="@dimen/dp_44"
        app:layout_constraintEnd_toEndOf="parent"
        android:background="#222222"
        app:rTopLeftRadius="@dimen/dp_30"
        app:rBottomLeftRadius="@dimen/dp_30">

        <TextView
            android:id="@+id/tv_my_page"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="-18dp"
            android:layout_marginTop="@dimen/dp_240"
            android:rotation="90"
            android:fontFamily="@font/pretendard_bold"
            android:includeFontPadding="false"
            android:letterSpacing="0.1"
            android:text="MY PAGE"
            android:textColor="@color/white"
            android:textSize="54pt" />
    </net.csdn.roundview.RoundFrameLayout>

    <FrameLayout
        android:id="@+id/fl_wallet_bg"
        android:layout_width="match_parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginStart="295pt"
        android:layout_marginTop="@dimen/dp_42"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_height="match_parent">
        <net.csdn.roundview.RoundFrameLayout
            android:layout_marginStart="15pt"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="@dimen/dp_2"
            android:background="#3dd272"
            app:rTopLeftRadius="@dimen/dp_30"
            app:rBottomLeftRadius="@dimen/dp_30">

            <TextView
                android:id="@+id/wallet"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="-10dp"
                android:layout_marginTop="@dimen/dp_140"
                android:fontFamily="@font/pretendard_bold"
                android:includeFontPadding="false"
                android:letterSpacing="0.1"
                android:rotation="90"
                android:text="WALLET"
                android:textColor="@color/white"
                android:textSize="54pt"
                android:textStyle="bold" />


        </net.csdn.roundview.RoundFrameLayout>
        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <net.csdn.roundview.CircleImageView
                android:id="@+id/iv_header"
                android:layout_width="200pt"
                android:layout_height="200pt"
                android:background="@color/white"
                app:rRadius="@dimen/dp_30"
                app:rStrokeColor="@color/black"
                app:rStrokeWidth="15pt" />


            <net.csdn.roundview.RoundTextView
                android:id="@+id/rt_message_num"
                android:layout_width="@dimen/dp_20"
                android:layout_height="@dimen/dp_20"
                android:layout_gravity="end"
                android:rotation="-5.5"
                android:fontFamily="@font/pretendard_semibold"
                android:gravity="center"
                android:includeFontPadding="false"
                android:textColor="@color/white"
                android:textSize="33pt"
                android:background="@color/read_dot_bg"
                app:rRadius="@dimen/dp_10"/>
        </FrameLayout>

    </FrameLayout>



    <net.csdn.roundview.RoundLinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginStart="310pt"
        android:layout_marginTop="150pt"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        android:background="#8E8E8E"
        app:rTopLeftRadius="120pt">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:layout_marginTop="15dp"
            android:layout_marginEnd="95pt">

            <ImageView
                android:layout_width="90pt"
                android:layout_height="90pt"
                android:layout_marginEnd="70pt"
                android:layout_gravity="center_vertical"
                android:src="@mipmap/ic_search_white" />

            <ImageView
                android:id="@+id/iv_close"
                android:layout_width="70pt"
                android:layout_gravity="center_vertical"
                android:layout_height="70pt"
                android:src="@mipmap/ic_close_white" />
        </LinearLayout>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <androidx.core.widget.NestedScrollView
                android:id="@+id/scrollView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="end"
                        android:layout_marginTop="60pt"
                        android:layout_marginEnd="70pt">

                        <ImageView
                            android:layout_width="565pt"
                            android:src="@drawable/logo_yellow"
                            android:layout_marginEnd="71pt"
                            android:layout_height="112pt"/>
                    </LinearLayout>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="end"
                        android:layout_marginTop="50pt"
                        android:layout_marginEnd="95pt"
                        android:fontFamily="@font/pretendard_bold"
                        android:includeFontPadding="false"
                        android:letterSpacing="0.1"
                        android:text="@string/my_message"
                        android:textColor="@color/white"
                        android:textSize="54pt" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="2pt"
                        android:layout_marginStart="120pt"
                        android:layout_marginTop="81pt"
                        android:background="@color/color_yellow" />

                    <FrameLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="120pt"
                        android:layout_marginTop="30dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/pretendard_bold"
                            android:includeFontPadding="false"
                            android:letterSpacing="0.1"
                            android:text="@string/my_message"
                            android:textColor="@color/color_yellow"
                            android:textSize="54pt" />

                        <FrameLayout
                            android:layout_width="80pt"
                            android:layout_gravity="end|center_vertical"
                            android:layout_marginEnd="95pt"
                            android:layout_height="80pt">

                            <View
                                android:layout_width="44pt"
                                android:layout_height="6pt"
                                android:layout_gravity="center"
                                android:scaleType="centerCrop"
                                android:background="@color/color_yellow"/>
                        </FrameLayout>

                    </FrameLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="2pt"
                        android:layout_marginStart="120pt"
                        android:layout_marginTop="35pt"
                        android:background="@color/white" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="120pt"
                        android:layout_marginTop="87pt">

                        <ImageView
                            android:layout_width="75pt"
                            android:layout_height="75pt"
                            android:layout_gravity="center_vertical"
                            android:src="@mipmap/ic_menu_item" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="54pt"
                            android:fontFamily="@font/pretendard_regular"
                            android:includeFontPadding="false"
                            android:letterSpacing="0.1"
                            android:text="새  메세지"
                            android:textSize="52pt"
                            android:textColor="@color/white" />

                        <net.csdn.roundview.RoundTextView
                            android:layout_width="70pt"
                            android:layout_height="70pt"
                            android:layout_gravity="center_vertical"
                            android:layout_marginStart="45pt"
                            android:gravity="center"
                            android:text="10"
                            android:fontFamily="@font/pretendard_semibold"
                            android:textColor="@color/white"
                            android:textSize="33pt"
                            android:background="@color/read_dot_bg"
                            app:rRadius="35pt"/>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="120pt"
                        android:layout_marginTop="75pt">

                        <ImageView
                            android:layout_width="75pt"
                            android:layout_height="75pt"
                            android:layout_gravity="center_vertical"
                            android:src="@mipmap/ic_menu_item" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="54pt"
                            android:textSize="52pt"
                            android:fontFamily="@font/pretendard_regular"
                            android:includeFontPadding="false"
                            android:letterSpacing="0.1"
                            android:text="과거  메세지"
                            android:textColor="@color/white" />
                    </LinearLayout>

                    <FrameLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="120pt"
                        android:layout_marginTop="174pt">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/pretendard_bold"
                            android:letterSpacing="0.1"
                            android:text="SETTING"
                            android:textColor="@color/color_yellow"
                            android:textSize="16sp"
                            android:textStyle="bold" />

                        <FrameLayout
                            android:layout_width="80pt"
                            android:layout_height="80pt"
                            android:layout_marginEnd="95pt"
                            android:layout_gravity="end|center_vertical">

                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:src="@mipmap/ic_more_yellow" />
                        </FrameLayout>

                    </FrameLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="2pt"
                        android:layout_marginStart="120pt"
                        android:layout_marginTop="38pt"
                        android:background="@color/white" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="120pt"
                        android:layout_marginTop="87pt">

                        <ImageView
                            android:layout_width="75pt"
                            android:layout_height="75pt"
                            android:layout_gravity="center_vertical"
                            android:src="@mipmap/ic_menu_item" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="54pt"
                            android:fontFamily="@font/pretendard_regular"
                            android:includeFontPadding="false"
                            android:letterSpacing="0.1"
                            android:textSize="52pt"
                            android:text="메세지  설정"
                            android:textColor="@color/white" />


                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="120pt"
                        android:layout_marginTop="75pt">

                        <ImageView
                            android:layout_width="75pt"
                            android:layout_height="75pt"
                            android:layout_gravity="center_vertical"
                            android:src="@mipmap/ic_menu_item" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="54pt"
                            android:fontFamily="@font/pretendard_regular"
                            android:text="온라인상태 설정"
                            android:textSize="52pt"
                            android:includeFontPadding="false"
                            android:letterSpacing="0.1"
                            android:textColor="@color/white" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="120pt"
                        android:layout_marginTop="75pt">

                        <ImageView
                            android:layout_width="75pt"
                            android:layout_height="75pt"
                            android:layout_gravity="center_vertical"
                            android:src="@mipmap/ic_menu_item" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="54pt"
                            android:fontFamily="@font/pretendard_regular"
                            android:includeFontPadding="false"
                            android:letterSpacing="0.1"
                            android:textSize="52pt"
                            android:text="기타설정"
                            android:textColor="@color/white" />
                    </LinearLayout>

                    <net.csdn.roundview.RoundFrameLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/dp_33"
                        android:background="#f7f7f7"
                        app:rRadius="@dimen/dp_15">


                        <com.youth.banner.Banner
                            android:id="@+id/banner"
                            android:layout_width="match_parent"
                            android:layout_height="94dp"

                            app:banner_auto_loop="false"
                            app:banner_indicator_gravity="center"
                            app:banner_indicator_height="@dimen/dp_6"
                            app:banner_indicator_normal_color="#e8e8e8"
                            app:banner_indicator_normal_width="6dp"
                            app:banner_indicator_radius="@dimen/dp_3"
                            app:banner_indicator_selected_color="@color/color_green"
                            app:banner_indicator_selected_width="6dp" />
                    </net.csdn.roundview.RoundFrameLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dp_150" />
                </LinearLayout>
            </androidx.core.widget.NestedScrollView>

            <FrameLayout
                android:id="@+id/fl_blur"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_150"
                android:layout_gravity="bottom"
                android:background="@drawable/message_blur_bg">

                <ImageView
                    android:id="@+id/iv_down_arrow"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:src="@mipmap/ic_arrow_down_gray" />
            </FrameLayout>
        </FrameLayout>
    </net.csdn.roundview.RoundLinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>