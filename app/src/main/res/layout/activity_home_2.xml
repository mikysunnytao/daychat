<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawer"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:openDrawer="end">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/main_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/transparent"
        android:orientation="vertical">


        <FrameLayout
            android:id="@+id/fl_fragment"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            android:visibility="gone" />

        <com.daychat.live.widget.NoSrcollViewPager
            android:id="@+id/vp_main"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            app:layout_constraintBottom_toTopOf="@+id/ll_bottom"
            app:layout_constraintTop_toTopOf="parent" />

        <net.csdn.roundview.RoundFrameLayout
            android:id="@+id/fl_menus"
            android:layout_width="680pt"
            android:layout_height="340pt"
            android:background="@drawable/menu_shape"
            android:visibility="gone"
           app:layout_constraintBottom_toTopOf="@+id/ll_bottom"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:rTopRadius="340pt">

            <ImageView
                android:id="@+id/iv_camera"
                android:layout_width="100pt"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="68pt"
                android:adjustViewBounds="true"
                android:src="@mipmap/ic_menu_camera" />

            <ImageView
                android:id="@+id/iv_message"
                android:layout_width="100pt"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:layout_marginStart="102pt"
                android:layout_marginBottom="65pt"
                android:adjustViewBounds="true"
                android:src="@mipmap/ic_menu_message" />

            <ImageView
                android:id="@+id/iv_video"
                android:layout_width="100pt"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom|end"
                android:layout_marginEnd="100pt"
                android:layout_marginBottom="80pt"
                android:adjustViewBounds="true"
                android:src="@mipmap/ic_menu_video" />
        </net.csdn.roundview.RoundFrameLayout>

        <LinearLayout
            android:id="@+id/ll_bottom"
            android:layout_width="match_parent"
            android:layout_height="240pt"
            android:background="@color/color_1c"
            android:gravity="center_vertical"
            app:layout_constraintBottom_toBottomOf="parent">

            <ImageView
                android:id="@+id/nav1"
                android:layout_width="120pt"
                android:layout_height="120pt"
                android:layout_marginStart="95pt"
                android:src="@drawable/circle_icon" />

            <ImageView
                android:id="@+id/nav2"
                android:layout_width="120pt"
                android:layout_height="120pt"
                android:layout_marginStart="100pt"
                android:src="@drawable/circle_icon" />

            <ImageView
                android:id="@+id/nav3"
                android:layout_width="120pt"
                android:layout_height="120pt"
                android:layout_marginStart="420pt"
                android:src="@drawable/circle_icon" />

            <ImageView
                android:id="@+id/nav4"
                android:layout_width="120pt"
                android:layout_height="120pt"
                android:layout_marginStart="100pt"
                android:src="@drawable/circle_icon" />
        </LinearLayout>

        <ImageView
            android:id="@+id/iv_release"
            android:layout_width="250pt"
            android:layout_height="250pt"
            android:layout_marginBottom="70pt"
            android:src="@drawable/bottom_menu_add"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />


    </androidx.constraintlayout.widget.ConstraintLayout>

    <LinearLayout
        android:layout_width="1000pt"
        android:layout_height="match_parent"
        android:layout_gravity="end"
        android:background="@color/white"
        android:orientation="vertical">

        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">


                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginStart="15dp"
                    android:layout_marginTop="80dp"
                    android:fontFamily="@font/pretendard_semibold"
                    android:textColor="@color/black"
                    android:gravity="center_vertical"
                    android:text="HOME" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1pt"
                    android:layout_marginStart="@dimen/dp_15"
                    android:background="#e1e1e1" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/dp_15"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:fontFamily="@font/pretendard_semibold"
                        android:textColor="@color/black"
                        android:gravity="center_vertical"
                        android:text="CHAT" />
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1pt"
                        android:background="#e1e1e1" />
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:layout_marginStart="@dimen/dp_15"
                        android:gravity="center_vertical"
                        android:text="MY CHAT" />
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1pt"
                        android:background="#e1e1e1" />
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:layout_marginStart="@dimen/dp_15"
                        android:gravity="center_vertical"
                        android:text="FRIENDS(연락처)" />
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1pt"
                        android:background="#e1e1e1" />
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:layout_marginStart="@dimen/dp_15"
                        android:gravity="center_vertical"
                        android:text="+ 모임광장" />
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1pt"
                        android:background="#e1e1e1" />
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:layout_marginStart="@dimen/dp_30"
                        android:gravity="center_vertical"
                        android:text="-장르별(태그)" />
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1pt"
                        android:background="#e1e1e1" />
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:layout_marginStart="@dimen/dp_30"
                        android:gravity="center_vertical"
                        android:text="-추천모임" />
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1pt"
                        android:background="#e1e1e1" />
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:layout_marginStart="@dimen/dp_30"
                        android:gravity="center_vertical"
                        android:text="-핫한모임" />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/dp_15"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:fontFamily="@font/pretendard_semibold"
                        android:gravity="center_vertical"
                        android:textColor="@color/black"
                        android:text="FUN" />
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1pt"
                        android:background="#e1e1e1" />
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:layout_marginStart="@dimen/dp_15"
                        android:gravity="center_vertical"
                        android:text="VIDEO" />
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1pt"
                        android:background="#e1e1e1" />
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:layout_marginStart="@dimen/dp_15"
                        android:gravity="center_vertical"
                        android:text="SHORTS" />
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1pt"
                        android:background="#e1e1e1" />
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:layout_marginStart="@dimen/dp_15"
                        android:gravity="center_vertical"
                        android:text="PICTURES" />
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1pt"
                        android:background="#e1e1e1" />
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:layout_marginStart="@dimen/dp_15"
                        android:gravity="center_vertical"
                        android:text="STORE" />

                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/dp_15"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:gravity="center_vertical"
                        android:fontFamily="@font/pretendard_semibold"
                        android:textColor="@color/black"
                        android:text="PICKUP" />
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1pt"
                        android:background="#e1e1e1" />
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:layout_marginStart="@dimen/dp_15"
                        android:gravity="center_vertical"
                        android:text="모임(그룹채팅)" />
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1pt"
                        android:background="#e1e1e1" />
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:layout_marginStart="@dimen/dp_15"
                        android:gravity="center_vertical"
                        android:text="쿠폰" />
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1pt"
                        android:background="#e1e1e1" />
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:layout_marginStart="@dimen/dp_15"
                        android:gravity="center_vertical"
                        android:text="배달" />
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1pt"
                        android:background="#e1e1e1" />
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:layout_marginStart="@dimen/dp_15"
                        android:gravity="center_vertical"
                        android:text="여행" />
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1pt"
                        android:background="#e1e1e1" />
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:layout_marginStart="@dimen/dp_15"
                        android:gravity="center_vertical"
                        android:text="운동" />

                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/dp_15"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:gravity="center_vertical"
                        android:fontFamily="@font/pretendard_semibold"
                        android:textColor="@color/black"
                        android:text="QUICK +" />
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1pt"
                        android:background="#e1e1e1" />
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:layout_marginStart="@dimen/dp_15"
                        android:gravity="center_vertical"
                        android:text="채팅방마들기" />
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1pt"
                        android:background="#e1e1e1" />
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:layout_marginStart="@dimen/dp_15"
                        android:gravity="center_vertical"
                        android:text="친구추가하기" />
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1pt"
                        android:background="#e1e1e1" />
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:layout_marginStart="@dimen/dp_15"
                        android:gravity="center_vertical"
                        android:text="비디오/쇼츠올리기" />
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1pt"
                        android:background="#e1e1e1" />
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:layout_marginStart="@dimen/dp_15"
                        android:gravity="center_vertical"
                        android:text="사진올리기" />

                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/dp_15"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:gravity="center_vertical"
                        android:fontFamily="@font/pretendard_semibold"
                        android:textColor="@color/black"
                        android:text="MY PAGE (SETTING)" />
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1pt"
                        android:background="#e1e1e1" />
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:layout_marginStart="@dimen/dp_15"
                        android:gravity="center_vertical"
                        android:text="MY PAGE" />
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1pt"
                        android:background="#e1e1e1" />
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:layout_marginStart="@dimen/dp_15"
                        android:gravity="center_vertical"
                        android:text="WALLET (지갑)" />
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1pt"
                        android:background="#e1e1e1" />
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:layout_marginStart="@dimen/dp_15"
                        android:gravity="center_vertical"
                        android:text="MESSEGE(메세지)" />


                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/dp_15"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:gravity="center_vertical"
                        android:fontFamily="@font/pretendard_semibold"
                        android:textColor="@color/black"
                        android:text="HELP" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1pt"
                        android:background="#e1e1e1" />
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:layout_marginStart="@dimen/dp_15"
                        android:gravity="center_vertical"
                        android:text="Q&amp;A" />
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1pt"
                        android:background="#e1e1e1" />
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:layout_marginStart="@dimen/dp_15"
                        android:gravity="center_vertical"
                        android:text="HELP (AI CHAT)" />
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1pt"
                        android:background="#e1e1e1" />
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:layout_marginStart="@dimen/dp_15"
                        android:gravity="center_vertical"
                        android:text="CONTACT" />


                </LinearLayout>


                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginStart="15dp"
                    android:fontFamily="@font/pretendard_semibold"
                    android:textColor="@color/black"
                    android:gravity="center_vertical"
                    android:text="ABOUT" />

                <ImageView
                    android:layout_width="600pt"
                    android:src="@mipmap/ic_main_logo"
                    android:layout_marginStart="@dimen/dp_15"
                    android:layout_height="wrap_content"/>
            </LinearLayout>
        </androidx.core.widget.NestedScrollView>
    </LinearLayout>
</androidx.drawerlayout.widget.DrawerLayout>