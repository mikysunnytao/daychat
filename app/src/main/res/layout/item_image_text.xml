<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginStart="25pt"
    android:layout_marginEnd="25pt"
    android:orientation="vertical">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >

        <net.csdn.roundview.RoundImageView
            android:layout_width="match_parent"
            android:layout_height="1550pt"
            android:scaleType="centerCrop"
            app:rRadius="40pt"
            android:src="@mipmap/ic_picture_demo" />

        <ImageView
            android:layout_width="37pt"
            android:layout_height="65pt"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="24pt"
            android:src="@mipmap/arrow_left" />
    </FrameLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_marginTop="38pt"
        android:layout_marginBottom="80pt"
        android:layout_marginStart="31pt"
        android:layout_height="wrap_content">
        <net.csdn.roundview.RoundImageView
            android:layout_width="127pt"
            android:layout_height="127pt"/>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_marginStart="33pt"
            android:orientation="vertical"
            android:layout_weight="1"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:text="사진타이틀은 15글자까지 표시가능…"
                android:singleLine="true"
                android:ellipsize="end"
                android:textSize="48pt"
                android:fontFamily="@font/pretendard_medium"
                android:textColor="@color/black"
                android:includeFontPadding="false"
                android:layout_height="wrap_content"/>
            <TextView
                android:layout_width="wrap_content"
                android:text="오늘의 기분 짱 좋습니다!"
                android:singleLine="true"
                android:ellipsize="end"
                android:textSize="38pt"
                android:letterSpacing="0.1"
                android:textColor="#919191"
                android:fontFamily="@font/pretendard_regular"
                android:includeFontPadding="false"
                android:layout_height="wrap_content"/>
        </LinearLayout>
        <ImageView
            android:layout_width="77pt"
            android:layout_gravity="center_vertical"
            android:src="@mipmap/ic_like_default"
            android:layout_marginEnd="69pt"
            android:layout_height="74pt"/>
    </LinearLayout>
</LinearLayout>