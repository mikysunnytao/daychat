<?xml version="1.0" encoding="utf-8"?>
<net.csdn.roundview.RoundLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginBottom="45pt"
    android:background="@color/white"
    app:rRadius="75pt"
    android:layout_marginStart="25pt"
    android:layout_marginEnd="25pt"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <FrameLayout
            android:id="@+id/player_container"
            android:layout_width="match_parent"
            android:layout_height="697.5pt"
            android:background="@android:color/black">

            <xyz.doikki.videocontroller.component.PrepareView
                android:id="@+id/prepare_view"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />

        </FrameLayout>

        <ImageView
            android:layout_width="37.34pt"
            android:src="@mipmap/arrow_left"
            android:layout_marginStart="58pt"
            android:layout_gravity="center_vertical"
            android:layout_height="65.32pt"/>
        <ImageView
            android:id="@+id/iv_play"
            android:layout_width="154pt"
            android:visibility="gone"
            android:src="@mipmap/ic_video_pause"
            android:layout_height="154pt"
            android:layout_gravity="center" />
        <ImageView
            android:layout_width="37.34pt"
            android:layout_gravity="end|center_vertical"
            android:layout_marginEnd="58pt"
            android:src="@mipmap/ic_arrow_right"
            android:layout_height="65.32pt"/>
    </FrameLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_marginTop="54.5pt"
        android:layout_height="wrap_content">
        <net.csdn.roundview.CircleImageView
            android:layout_width="150pt"
            android:id="@+id/iv_header"
            android:scaleType="centerCrop"
            android:src="@drawable/header_main"
            android:layout_marginStart="65pt"
            android:layout_height="150pt"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_marginEnd="60pt"
            android:layout_marginStart="43pt"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/tv_title"
                android:layout_width="wrap_content"
                android:textColor="@color/black"
                android:lines="2"
                android:includeFontPadding="false"
                android:textSize="48pt"
                android:letterSpacing="0.1"
                android:fontFamily="@font/pretendard_medium"
                android:text="영상타이틀은 40글자까지 설정이가능합니다 최대 두줄까지 쓸수있어요…"
                android:ellipsize="end"
                android:layout_height="wrap_content"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_marginTop="30pt"
                android:layout_marginBottom="30pt"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="wrap_content"
                    android:includeFontPadding="false"
                    android:textSize="36pt"
                    android:textColor="#7C7C7C"
                    android:letterSpacing="0.1"
                    android:text="SubTitle  |  22508 프레뷰  |  5시간전"
                    android:fontFamily="@font/pretendard_regular"
                    android:layout_height="wrap_content"/>

            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</net.csdn.roundview.RoundLinearLayout>